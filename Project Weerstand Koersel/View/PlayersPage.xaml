<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_Weerstand_Koersel.View.PlayersPage"
             xmlns:model="clr-namespace:Project_Weerstand_Koersel.Model"
             xmlns:viewmodel="clr-namespace:Project_Weerstand_Koersel.ViewModel"
             x:DataType="viewmodel:PlayersPageViewModel"
             Title="{Binding Title}">

        <Grid
        RowDefinitions="*,Auto"
        RowSpacing="0">
            <VerticalStackLayout>

                <CollectionView ItemsSource="{Binding Spelers}"
                             SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Speler">
                            <Grid Padding="10">
                                <Frame HeightRequest="100" Style="{StaticResource CardView}">
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlayersPageViewModel}}, Path=GoToDetailsCommand}"
                                            CommandParameter="{Binding .}"/>
                                    </Frame.GestureRecognizers>
                                    <Grid Padding="0" ColumnDefinitions="125, *">
                                        <Image Aspect="AspectFill" Source="group.png"
                                           WidthRequest="100"
                                           HeightRequest="100"/>
                                        <VerticalStackLayout
                                        Grid.Column="1"
                                        VerticalOptions="Center"
                                        Padding="10">
                                            <Label Style="{StaticResource LargeLabel}" Text="{Binding Name}" />
                                            <Label Style="{StaticResource SmallLabel}" Text="{Binding PositionSmall}" />
                                        </VerticalStackLayout>
                                    </Grid>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>




                <Button Text="Get Players" 
                    Command="{Binding GetSpelersCommand}"
                    Grid.Row="1"
                    Style="{StaticResource ButtonOutline}"
                    Margin="8"/>

            </VerticalStackLayout>
        </Grid>
</ContentPage>
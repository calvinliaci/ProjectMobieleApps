<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project_Weerstand_Koersel.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Project_Weerstand_Koersel.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Homepage" Icon="home">
            <ShellContent
                Title="Homepage"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage"/>
        </Tab>
        <Tab Title="Matches" Icon="ball">
            <ShellContent
                Title="Two"
                ContentTemplate="{DataTemplate local:MatchesPage}"
                Route="TwoPage" />
        </Tab>
        <Tab Title="Players" Icon="group">
            <ShellContent
                Title="Three"
                ContentTemplate="{DataTemplate local:PlayersPage}"
                Route="ThreePage" />
        </Tab>
    </TabBar>

</Shell>
